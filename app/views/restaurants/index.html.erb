<div id = "slogan"><h1>Take your first bite</h1></div>
<div id = "home_search">
  <%= form_tag("/search", method: "get", class: "pure-form") do %>
  <%= label_tag(:q, "Find a restaurant:", id: "search_tag") %>
    <%= text_field_tag :search, params[:search], :placeholder => "Bernie's Bistro, Sushi, BBQ...", id: "box", class: "pure-input-1-4" %>
  <%= submit_tag("Search", class: "pure-button") %>
<% end %>
</div>

<div class = "restaurants_splash">
<% @restaurants = @restaurants.sort_by {|restaurant| restaurant.votes.count} %>
<% @restaurants.reverse.each do |restaurant| %>
  <h2 class = "restaurant_title"><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2> <div class = "votes"><b id="<%= "restaurant_" + "#{restaurant.id}"%>"><%= restaurant.votes.count %></b> <%= link_to restaurant_votes_path(restaurant), method: :post  do %>
      <img class ='vote' src="/ArrowUp.png" data-url="<%= restaurant_votes_path(restaurant) %>" data-type="<%= restaurant.class %>" data-id="<%= 'restaurant ' + "#{restaurant.id}" %>" data-user="<%= session[:user_id] %>"/><% end %></div>

<div id='front_restaurants'>
<% @restaurants.each do |restaurant| %>
  <p><b><%= restaurant.category%></b></p>
  <p><%= restaurant.street_address%></p>
  <p><%= restaurant.city %>, <%=restaurant.state%></p>


  <br>
<% end %>
</div>

<div id='front_users'>
<% @users.each do |user| %>
<p><%= link_to "#{user.username}", user_path(user.id) %></p>
  <% review = user.reviews.sample %>
    <h3><%= review.title %></h3>
    <p><%= review.restaurant.name %></p>
    <p><%= review.restaurant.city %> <%= review.restaurant.state %></p>
    <p><%= review.content %></p>
  <br>
<% end %>
</div>
